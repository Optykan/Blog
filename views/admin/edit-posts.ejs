<form action="/api/posts" method="POST" name="post_form">
	<input name="id" type="hidden" value="<%=post.id%>">
	<label for="title">Title</label>
	<input type="text" name="title" placeholder="Post Title" value="<%=post.title%>">
	<textarea id="simpleMDE"></textarea>
	<textarea name="snippet"></textarea>
	<label for="image">Image</label>
	<input name="image" type="text" value="<%=post.image%>">
	<button class="button primary" id="save-post">Save</button>
	<button class="button alert" id="delete-post">Delete</button>
	<button class="button secondary" id="cancel-post">Cancel</button> 
</form>

<script src="/javascripts/vendor/simplemde.min.js"></script>
<script>
var simplemde = new SimpleMDE({ element: document.getElementById("simpleMDE") });

// hello, XSS
<% let content = post.content
		.replace(/`/g, '\\`')
		.replace(/\n/g, '\\n')
		.replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;"); %>
simplemde.value(`<%-content%>`)
</script>